{
  "name": "bargain-price-monitor",
  "version": "0.0.1",
  "description": "Front and backend application for a service that will monitor used services for good deals",
  "engines": {
    "node": "10.x"
  },
  "scripts": {
    "postinstall": "cd react-ui/ && npm install",
    "start": "ts-node server",
    "build": "npm run build",
    "test": "jest && cd react-ui && npm test"
  },
  "cacheDirectories": [
    "node_modules",
    "react-ui/node_modules"
  ],
  "dependencies": {
    "@types/node": "^16.4.2",
    "@types/jest": "^26.0.24",
    "amqplib": "^0.8.0",
    "axios": "^0.21.1",
    "express": "^4.17.1",
    "nodemailer": "^6.6.3",
    "pg": "^8.6.0",
    "raygun": "^0.13.1",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mrhaasguy/bargain-price-monitor"
  },
  "keywords": [
    "node",
    "heroku"
  ],
  "license": "MIT",
  "devDependencies": {
    "jest": "26.6.0"
  },
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/react-ui/"
    ]
  }
}
